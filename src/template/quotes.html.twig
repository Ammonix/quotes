<div class="row">
    {% for quote in quotes %}
        <div class="col s12 m6 l4">
            <div class="card horizontal quoteCards">
                <div class="card-image">
                    {% if file_exists(quote.author.thumbnail) %}
                        <img src="{{ quote.author.thumbnail }}">
                    {% else %}
                        <img src="http://quotes.localhost/api/files/images/defAuthor.png">
                    {% endif %}
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <p class="hyphens">{{ quote.content  |  truncate(120) | wordwrap(20)}}</p>
                    </div>
                    <div class="card-action">
                        -
                        <i>{{ quote.author.name  | wordwrap(20) | truncate(10) }} {{ quote.date | date("d.m.Y") }}</i>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>