{% extends "layout.html.twig" %}
{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ base_url() }}/css/createQuote.css"/>
{% endblock %}
{% block title %}Create Quote{% endblock %}
{% block content %}
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">textsms</i>
                    <textarea id="quoteContent" class="materialize-textarea"></textarea>
                    <label for="quoteContent">Quote</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <select class="icons" id="quoteAuthor">
                        <option value="0" disabled selected>Author</option>
                        {% for author in authors %}
                            <option value="{{ author.id }}" data-icon="{{ author.thumbnail }}"
                                    class="left circle">{{ author.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="input-field col s12 m6">
                    <input id="quoteDate" type="date" class="datepicker">
                    <label for="quoteDate">Date</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light left"
                    type="button" name="action" id="createQuoteButton"> Submit
                <i class="material-icons right">send</i>
            </button>
            <button class="btn waves-effect waves-light right backButton"
                    type="button" name="action">Back
                <i class="material-icons right">skip_previous</i>
            </button>
        </form>
    </div>
{% endblock %}
{% block js %}
    {{ parent() }}
    <script type="text/javascript" src="{{ base_url() }}/js/createQuote.js"></script>
{% endblock %}
